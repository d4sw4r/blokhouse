generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
  API
  AUDIT
}

model User {
  id                 String              @id @default(cuid())
  name               String?
  email              String?             @unique
  emailVerified      DateTime?
  image              String?
  password           String?
  accounts           Account[]
  sessions           Session[]
  configurationItems ConfigurationItem[]
  ApiToken           ApiToken[]
  role         Role     @default(USER)
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

enum AssetStatus {
  ACTIVE
  DEPRECATED
  MAINTENANCE
}

model ItemType {
  id                 String              @id @default(cuid())
  name               String
  description        String?
  configurationItems ConfigurationItem[]
}

model Tag {
  id                 String              @id @default(cuid())
  name               String              @unique
  color              String?
  description        String?
  createdAt          DateTime            @default(now())
  configurationItems ConfigurationItem[]
}

model ConfigurationItem {
  id          String      @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  userId      String?
  user        User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  ip          String?
  mac         String?
  itemTypeId  String?
  itemType    ItemType? @relation(fields: [itemTypeId], references: [id])
  status      AssetStatus @default(ACTIVE)
  tags        Tag[]
}

model ApiToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
