generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model User {
  id                 String              @id @default(cuid())
  name               String?
  email              String?             @unique
  emailVerified      DateTime?
  image              String?
  password           String? // For CredentialsProvider (plain text demo only)
  accounts           Account[]
  sessions           Session[]
  configurationItems ConfigurationItem[]
  ApiToken           ApiToken[]
  auditLogs          AuditLog[]
  role               String              @default("USER")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model ItemType {
  id                 String              @id @default(cuid())
  name               String
  description        String?
  // Back-relation: all configuration items assigned to this type
  configurationItems ConfigurationItem[]
  // Custom fields for this item type
  customFields       CustomField[]
}

model Tag {
  id                 String              @id @default(cuid())
  name               String              @unique
  color              String?             // Optional hex color for UI display
  description        String?
  createdAt          DateTime            @default(now())
  // Many-to-many relation with Configuration Items
  configurationItems ConfigurationItem[]
}

model ConfigurationItem {
  id          String      @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  userId      String?
  user        User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  // New fields for network information:
  ip          String?
  mac         String?
  // New relation: optional type assignment
  itemTypeId  String?
  itemType    ItemType?   @relation(fields: [itemTypeId], references: [id])
  // Asset status field
  status      String      @default("ACTIVE")
  // Many-to-many relation with Tags
  tags        Tag[]
  // Custom field values
  customFieldValues CustomFieldValue[]
  // Asset relationships (outgoing relations)
  relationsFrom AssetRelation[] @relation("RelationSource")
  // Asset relationships (incoming relations)
  relationsTo   AssetRelation[] @relation("RelationTarget")
}

model AssetRelation {
  id          String            @id @default(cuid())
  sourceId    String            // Source ConfigurationItem
  source      ConfigurationItem @relation("RelationSource", fields: [sourceId], references: [id], onDelete: Cascade)
  targetId    String            // Target ConfigurationItem
  target      ConfigurationItem @relation("RelationTarget", fields: [targetId], references: [id], onDelete: Cascade)
  type        String            // e.g., "DEPENDS_ON", "RUNS_ON", "CONNECTED_TO", "CONTAINS"
  description String?
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@unique([sourceId, targetId, type])
  @@index([sourceId])
  @@index([targetId])
}

model ApiToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String?
  user      User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model AuditLog {
  id          String      @id @default(cuid())
  action      String
  entityType  String      // e.g., "ConfigurationItem", "User", "ApiToken"
  entityId    String?     // ID of the affected entity (optional for global actions)
  userId      String?     // Who performed the action
  user        User?       @relation(fields: [userId], references: [id], onDelete: SetNull)
  description String?     // Human-readable description
  oldValues   String?     // Previous values (for updates/deletes)
  newValues   String?     // New values (for creates/updates)
  ipAddress   String?     // Client IP address
  userAgent   String?     // Client user agent
  createdAt   DateTime    @default(now())

  @@index([createdAt])
  @@index([userId])
  @@index([entityType, entityId])
}

model CustomField {
  id          String          @id @default(cuid())
  name        String          // Field name (e.g., "purchase_date")
  label       String          // Display label (e.g., "Purchase Date")
  description String?
  type        String          // STRING, NUMBER, BOOLEAN, DATE, URL, EMAIL
  required    Boolean         @default(false)
  defaultValue String?        // Default value as string
  options     String          @default("[]") // JSON array as string for SQLite
  itemTypeId  String?         // If null, applies to all item types
  itemType    ItemType?       @relation(fields: [itemTypeId], references: [id], onDelete: Cascade)
  values      CustomFieldValue[]
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  @@unique([name, itemTypeId])
  @@index([itemTypeId])
}

model CustomFieldValue {
  id                  String          @id @default(cuid())
  value               String          // Stored as string, parsed based on field type
  customFieldId       String
  customField         CustomField     @relation(fields: [customFieldId], references: [id], onDelete: Cascade)
  configurationItemId String
  configurationItem   ConfigurationItem @relation(fields: [configurationItemId], references: [id], onDelete: Cascade)
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt

  @@unique([customFieldId, configurationItemId])
  @@index([configurationItemId])
}
